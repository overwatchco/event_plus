// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  REPRESENTANTE
  USUARIO
  NONE
}

model Usuario {
  id       String    @id @default(uuid())
  nit      String?   @unique
  cedula   Int       @unique
  nombre   String
  email    String
  password String
  rol      Role      @default(NONE)
  Empresa  Empresa[]
  Actas    Actas[]
}

model Empresa {
  id           String     @id @default(uuid())
  nit          String     @unique
  pais         String
  departamento String
  ciudad       String
  direccion    String
  telefono     String
  usuario      Usuario    @relation(fields: [usuarioId], references: [id])
  usuarioId    String
  Contrato     Contrato[]
}

model Contrato {
  id        String      @id @default(uuid())
  nit       String      @unique
  objeto    String?
  empresa   Empresa     @relation(fields: [empresaId], references: [id])
  empresaId String
  Reuniones Reuniones[]
  Eventos   Eventos[]
}

model Reuniones {
  id         String   @id @default(uuid())
  objetivo   String?
  contrato   Contrato @relation(fields: [contratoId], references: [id])
  contratoId String
  Actas      Actas[]
}

model Actas {
  id        String    @id @default(uuid())
  usuario   Usuario   @relation(fields: [usuarioId], references: [id])
  usuarioId String
  reunion   Reuniones @relation(fields: [reunionId], references: [id])
  reunionId String
}

model Eventos {
  id             String           @id @default(uuid())
  Requerimientos Requerimientos[]
  contrato       Contrato         @relation(fields: [contratoId], references: [id])
  contratoId     String
}

model Requerimientos {
  id       String     @id @default(uuid())
  evento   Eventos    @relation(fields: [eventoId], references: [id])
  eventoId String
  Imagenes Imagenes[]
}

model Imagenes {
  id              String         @id @default(uuid())
  path            String
  requerimiento   Requerimientos @relation(fields: [requerimientoId], references: [id])
  requerimientoId String
}
